generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   @db.VarChar(120)
  email String @db.VarChar(320)
  firstName String?
  lastName String?
  role      Role     @default(USER)

  posts Post[]
  postComments PostComment[]
  eventComments EventComment[]
  event Event[]
}

model Post{
  id  String @id @default(uuid())
  title String
  slug String @unique
  excerpt String
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  author User @relation(fields: [authorId],references: [id], onDelete: Cascade)

  comments PostComment[]

  @@index([authorId])
  @@index([createdAt])
}

model PostComment{
  id String @id @default(uuid())

  postId String
  post Post @relation(fields: [postId],references: [id], onDelete: Cascade)

  authorId String
  author User @relation(fields: [authorId],references: [id], onDelete: Cascade)

  parentId String?
  parent PostComment? @relation("PostCommentReplies",fields: [parentId],references: [id],onDelete: SetNull)
  replies PostComment[] @relation("PostCommentReplies")

  body String
  anonymous Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([postId, createdAt])
  @@index([authorId, createdAt])
  @@index([parentId])
}

model Event{
  id String @id @default(uuid())
  title String 
  host String
  startTime DateTime
  endTime DateTime
  date DateTime
  location String
  description String

  authorId String
  author User @relation(fields: [authorId],references: [id],onDelete: Cascade)
  comments EventComment[]
}

model EventComment{
  id String @id @default(uuid())

  eventId String
  event Event @relation(fields: [eventId],references: [id], onDelete: Cascade)

  authorId String
  author User @relation(fields: [authorId],references: [id], onDelete: Cascade)

  parentId String?
  parent EventComment? @relation("EventCommentReplies",fields: [parentId],references: [id],onDelete: SetNull)
  replies EventComment[] @relation("EventCommentReplies")

  body String
  anonymous Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([eventId, createdAt])
  @@index([authorId, createdAt])
  @@index([parentId])
}



enum Role { 
  USER
  ADMIN 
  TRISTON
  }
